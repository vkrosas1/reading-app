<UserControl x:Class="ReadingApp.Views.AddBookView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       >
    <Grid>
        <StackPanel Margin="20">
            <TextBox Text="{Binding NewBook.Title, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Text="{Binding NewBook.Author, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Add Book" 
                Command="{Binding AddBookCommand}" 
                Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
